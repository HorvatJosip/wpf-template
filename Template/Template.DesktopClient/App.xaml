<Application x:Class="Template.DesktopClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Constants-->
                <ResourceDictionary Source="Resources/Numbers.xaml"/>
                
                <!-- Styles -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Controls.xaml"/>
                
                <!-- Localization -->
                <ResourceDictionary Source="Resources/Localization/en-US/App.xaml"/>
                <ResourceDictionary Source="Resources/Localization/en-US/MainMenuPage.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
