<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Label}">
        <Setter Property="Background" Value="{StaticResource brushSecondary}"/>
        <Setter Property="Foreground" Value="{StaticResource brushTertiary}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="{StaticResource fontSizeLarge}"/>
    </Style>

    <!--<Style x:Key="Error" TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="Foreground" Value="{StaticResource brushError}"/>
    </Style>-->

</ResourceDictionary>